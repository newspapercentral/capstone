{% extends "layout.html" %}

{% block content %}
	<div>
		<form action="register" method="post">
			Username: <input type="text" name="username"><br>
			Password: <input type="password" name="password"><br>
			Confirm Password:<input type="password" name="password2"><br>
			Security Question: "What was your first dog's name?" <br>
			Answer: <input type="text" name="securityAnswer"> <br>
			<input type="submit">
		</form>
	</div>
	<div>
		<form action="login" method="post">
			Username: <input type="text" name="username"><br>
			Password: <input type="password" name="password"><br>
			<input type="submit">
		</form>
	</div>
	
	<div class="login-form">
    <form action="#" method="post">
        <h2 class="text-center">Log in</h2>       
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required" name="username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required" name="password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>     
    </form>
	</div>
	
	<div class="login-form">
    <form action="register" method="post">
        <h2 class="text-center">Create New Account</h2>       
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required" name="username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required" name="password">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Confirm Password" required="required" name="cpassword">
        </div>
        <div class="form-group">
            <label>What was your first dog's name?</label>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Security Answer" required="required" name="securityAnswer">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>     
    </form>
	</div>
	
	<div class="login-form">
    <form action="#" method="post">
        <h2 class="text-center">Forgot Password</h2>       
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required" name="username">
        </div>
        <div class="form-group">
            <label>What was your first dog's name?</label>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Security Answer" required="required" name="securityAnswer">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>     
    </form>
	</div>
{% endblock %}
