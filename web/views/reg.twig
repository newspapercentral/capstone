{% extends "layout.html" %}

{% block content %}	
	<div class="login-form">
    <form action="register/send" method="post">
        <h2 class="text-center">Create New Account</h2>       
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required" name="username" maxlength="20" pattern="[A-Za-z0-9]{3,}">
            <h6>(3-20 letters and numbers only)</h6>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required" name="password" maxlength="30" pattern="[A-Za-z]{16,}">
        	<h6>(16-30 letters only)</h6>
        </div>
        <div class="form-group">
            <label>Who is your hero?</label>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Security Answer" required="required" name="securityAnswer" maxlength="20" pattern="[A-Za-z]{5,}">
        	<h6>(3-20 letters only)</h6>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>     
    </form>
	</div>
{% endblock %}
